<?xml version="1.0"?>
<block>
  <name>phase_offset</name>
  <key>wifius_phase_offset</key>
  <category>wifius</category>
  <import>import wifius</import>
  <make>wifius.phase_offset($offset)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Phase Offset (Rads)</name>
    <key>offset</key>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
