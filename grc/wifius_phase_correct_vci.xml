<?xml version="1.0"?>
<block>
  <name>Phase Correct</name>
  <key>wifius_phase_correct_vci</key>
  <category>wifius</category>
  <import>import wifius</import>
  <import>import pmt</import>
  <make>wifius.phase_correct_vci($cal_tone_freq, $samp_rate, $vlen, $mu, $debug)</make>

  <callback>set_enable_sync($msg)</callback>

  <param>
    <name>Cal Tone Freq</name>
    <key>cal_tone_freq</key>
    <type>float</type>
  </param>
  <param>
    <name>Sample Rate</name>
    <key>samp_rate</key>
    <type>float</type>
  </param>
  <param>
    <name>Vec Size</name>
    <key>vlen</key>
    <type>int</type>
  </param>
  <param>
    <name>Step Size</name>
    <key>mu</key>
    <type>float</type>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <type>bool</type>
    <option>
      <name>True</name>
      <key>True</key>
    </option>
    <option>
      <name>False</name>
      <key>False</key>
    </option>
  </param>

  <sink>
    <name>Ref</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </sink>
  <sink>
    <name>ToSync</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </sink>
  <sink>
    <name>set_enable_sync</name>
    <type>message</type>
  </sink>

  <source>
    <name>shift</name>
    <type>complex</type>
    <vlen>$vlen</vlen>
  </source>
</block>
