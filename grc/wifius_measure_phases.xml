<?xml version="1.0"?>
<block>
  <name>measure_phases</name>
  <key>wifius_measure_phases</key>
  <category>wifius</category>
  <import>import wifius</import>
  <make>wifius.measure_phases($SampleRate, $CalibrationToneFrequency, $UpdatePeriod, $vlen)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Sample Rate</name>
    <key>SampleRate</key>
    <type>float</type>
  </param>
  <param>
    <name>Calibration Tone Frequency</name>
    <key>CalibrationToneFrequency</key>
    <type>float</type>
  </param>
  <param>
    <name>Update Period (Samples)</name>
    <key>UpdatePeriod</key>
    <type>int</type>
  </param>
  <param>
    <name>Vec Length</name>
    <key>vlen</key>
    <type>int</type>
  </param>

  <sink>
    <name>in1</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </sink>
  <sink>
    <name>in2</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </sink>
  <sink>
    <name>in3</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </sink>

  <source>
    <name>out1</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </source>
  <source>
    <name>out2</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </source>
  <source>
    <name>out3</name>
    <type>float</type>
    <vlen>$vlen</vlen>
  </source>

</block>
